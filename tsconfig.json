{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "lib": ["es5", "es6", "dom"],
        "allowJs": true,
        "sourceMap": true,
        "rootDir": "./",
        "downlevelIteration": true,
        "strict":true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths":{
            "@jquery" : ["externals/prod/jquery"],
            "@chart.js" : ["externals/prod/chartjs"],
            "@src/*" : ["webapp/*"],
            "@tests/*" : ["tests/*"],
            "@scrutiny-treetable" : ["webapp/components/scrutiny-treetable/scrutiny-treetable"],
            "@scrutiny-resizable-table" : ["webapp/components/scrutiny-resizable-table/scrutiny-resizable-table"],
            "@scrutiny-live-edit" : ["webapp/components/scrutiny-live-edit/scrutiny-live-edit"],
            "@scrutiny-objtextbox" : ["webapp/components/scrutiny-objtextbox/scrutiny-objtextbox"],
            "@scrutiny-focusable" : ["webapp/components/scrutiny-focusable/scrutiny-focusable"],
            "@scrutiny-multiselect" : ["webapp/components/scrutiny-multiselect/scrutiny-multiselect"],
        },
    },   
    "include": ["webapp/**/*", "externals/test/jquery.ts", "externals/prod/jquery.ts", "tests/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "build/**/*", "webapp/public"],
}