{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "lib": ["es5", "es6", "dom"],
        "allowJs": true,
        "sourceMap": true,
        "rootDir": "./",
        "downlevelIteration": true,
        "strict":true,
        "baseUrl": "./",
        "paths":{
            "@jquery" : ["externals/prod/jquery"]
        },
    },   
    "include": ["webapp/**/*", "externals/test/jquery.ts", "externals/prod/jquery.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "build/**/*", "webapp/public"]
  
}